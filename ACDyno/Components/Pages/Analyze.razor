@code {
    private string CarsRootPath { get; set; } = "";
    private string CarFilter { get; set; } = "";
    private string SelectedCarFolderName { get; set; } = "";
    private bool IsScanning { get; set; } = false;
    private bool IsLoading { get; set; } = false;
    private bool IsAnalyzing { get; set; } = false;
    private string? ScanMessage { get; set; }
    private string? ErrorMessage { get; set; }
    private string? AiAnalysis { get; set; }
    private CarData? LoadedCar { get; set; }
    
    private IEnumerable<CarEntry> FilteredCars => string.IsNullOrWhiteSpace(CarFilter)
        ? CarLibrary.AvailableCars
        : CarLibrary.AvailableCars.Where(c => 
            c.DisplayName.Contains(CarFilter, StringComparison.OrdinalIgnoreCase) ||
            c.FolderName.Contains(CarFilter, StringComparison.OrdinalIgnoreCase));
    
    protected override void OnInitialized()
    {
        CarLibrary.OnCarsListChanged += OnCarsListChanged;
        CarLibrary.OnCurrentCarChanged += OnCurrentCarChanged;
        
        if (!string.IsNullOrEmpty(CarLibrary.CarsRootPath))
        {
            CarsRootPath = CarLibrary.CarsRootPath;
        }
        
        if (CarLibrary.CurrentCar != null)
        {
            LoadedCar = CarLibrary.CurrentCar;
        }
    }
    
    private void OnCarsListChanged()
    {
        InvokeAsync(StateHasChanged);
    }
    
    private void OnCurrentCarChanged()
    {
        LoadedCar = CarLibrary.CurrentCar;
        AiAnalysis = null;
        InvokeAsync(StateHasChanged);
    }
    
    private void BrowseForFolder()
    {
        var folder = WindowService.PickFolder("Select Assetto Corsa Cars Folder");
        if (!string.IsNullOrEmpty(folder))
        {
            CarsRootPath = folder;
            StateHasChanged();
        }
    }
    
    private async Task ScanCarsFolder()
    {
        if (string.IsNullOrWhiteSpace(CarsRootPath))
        {
            ErrorMessage = "Please select a cars folder";
            return;
        }
        
        IsScanning = true;
        ScanMessage = null;
        ErrorMessage = null;
        
        try
        {
            var (success, message) = await CarLibrary.LoadCarsFolder(CarsRootPath);
            if (success)
            {
                ScanMessage = message;
            }
            else
            {
                ErrorMessage = message;
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error scanning folder: {ex.Message}";
        }
        
        IsScanning = false;
    }
    
    private async Task LoadSelectedCar()
    {
        if (string.IsNullOrEmpty(SelectedCarFolderName)) return;
        
        IsLoading = true;
        ErrorMessage = null;
        AiAnalysis = null;
        
        try
        {
            var car = await CarLibrary.LoadCar(SelectedCarFolderName);
            if (car != null)
            {
                LoadedCar = car;
                CarLibrary.SetCurrentCar(car);
            }
            else
            {
                ErrorMessage = "Failed to load car data";
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Failed to load car: {ex.Message}";
            LoadedCar = null;
        }
        
        IsLoading = false;
    }
    
    private async Task RunAiAnalysis()
    {
        if (LoadedCar == null) return;
        
        IsAnalyzing = true;
        try
        {
            AiAnalysis = await Gemini.AnalyzeCar(LoadedCar);
        }
        catch (Exception ex)
        {
            AiAnalysis = $"Analysis failed: {ex.Message}";
        }
        IsAnalyzing = false;
    }
    
    private string GetGripBalanceText(PerformanceMetrics m)
    {
        var diff = m.GripBalance;
        if (Math.Abs(diff) < 0.02) return "Neutral";
        if (diff > 0) return $"Understeer (+{diff:F2})";
        return $"Oversteer ({diff:F2})";
    }
    
    private string GetSeverityIcon(ValidationSeverity severity) => severity switch
    {
        ValidationSeverity.Info => "‚ÑπÔ∏è",
        ValidationSeverity.Warning => "‚ö†Ô∏è",
        ValidationSeverity.Error => "‚ùå",
        ValidationSeverity.Critical => "üö®",
        _ => "‚Ä¢"
    };
    
    public void Dispose()
    {
        CarLibrary.OnCarsListChanged -= OnCarsListChanged;
        CarLibrary.OnCurrentCarChanged -= OnCurrentCarChanged;
    }
}
