@page "/analyze"
@namespace ACDyno.Components.Pages
@inject CarLibraryService CarLibrary
@inject WindowService WindowService
@inject UnrealisticDetector Validator
@inject GeminiService Gemini
@implements IDisposable

<PageTitle>ACDyno - Analyze Car</PageTitle>

<div class="dyno-main-header">
    <h1 class="dyno-main-title">Analyze Car</h1>
    <p class="dyno-main-subtitle">Physics-based performance analysis from INI data</p>
</div>

<!-- Car Library Setup -->
<div class="dyno-card" style="margin-bottom: var(--space-lg);">
    <div class="dyno-card-header">
        <div class="dyno-card-icon">üìÅ</div>
        <h2 class="dyno-card-title">Car Library</h2>
    </div>
    
    <div style="display: flex; gap: var(--space-md); align-items: flex-end; margin-bottom: var(--space-md);">
        <div style="flex: 1;">
            <label class="form-label" style="color: var(--text-secondary); margin-bottom: var(--space-xs); display: block;">
                Cars Folder (contains car subfolders)
            </label>
            <input type="text" class="form-dyno" style="width: 100%;" 
                   @bind="CarsRootPath" 
                   placeholder="Click Browse or paste path here..." />
        </div>
        <button class="btn-dyno btn-dyno-secondary" @onclick="BrowseForFolder">
            <span>üìÇ</span>
            Browse
        </button>
        <button class="btn-dyno btn-dyno-primary" @onclick="ScanCarsFolder" disabled="@IsScanning">
            @if (IsScanning)
            {
                <span class="spinner" style="width: 16px; height: 16px; border-width: 2px;"></span>
            }
            else
            {
                <span>üîç</span>
            }
            Scan
        </button>
    </div>
    
    @if (!string.IsNullOrEmpty(ScanMessage))
    {
        <div class="validation-item severity-info" style="margin-bottom: var(--space-md);">
            <span class="validation-icon">‚ÑπÔ∏è</span>
            <div class="validation-content">
                <div class="validation-message">@ScanMessage</div>
            </div>
        </div>
    }
    
    @if (CarLibrary.AvailableCars.Any())
    {
        <div style="display: flex; gap: var(--space-md); align-items: flex-end;">
            <div style="flex: 1;">
                <label class="form-label" style="color: var(--text-secondary); margin-bottom: var(--space-xs); display: block;">
                    Select Car (@CarLibrary.AvailableCars.Count available)
                </label>
                <div style="display: flex; gap: var(--space-sm);">
                    <input type="text" class="form-dyno" style="width: 200px;" 
                           @bind="CarFilter" @bind:event="oninput"
                           placeholder="Filter cars..." />
                    <select class="form-dyno" style="flex: 1;" @bind="SelectedCarFolderName">
                        <option value="">-- Select a car --</option>
                        @foreach (var car in FilteredCars)
                        {
                            <option value="@car.FolderName">@car.DisplayName</option>
                        }
                    </select>
                </div>
            </div>
            <button class="btn-dyno btn-dyno-primary" @onclick="LoadSelectedCar" disabled="@(IsLoading || string.IsNullOrEmpty(SelectedCarFolderName))">
                @if (IsLoading)
                {
                    <span class="spinner" style="width: 16px; height: 16px; border-width: 2px;"></span>
                }
                else
                {
                    <span>üìä</span>
                }
                Analyze
            </button>
        </div>
    }
    
    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="validation-item severity-error" style="margin-top: var(--space-md);">
            <span class="validation-icon">‚ùå</span>
            <div class="validation-content">
                <div class="validation-message">@ErrorMessage</div>
            </div>
        </div>
    }
</div>

